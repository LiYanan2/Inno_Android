<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PersonalCenterActivity">

    <ImageView
        android:id="@+id/activity_personalcenter_account_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:src="@drawable/main_account" />

    <TextView
        android:id="@+id/activity_personalcenter_welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="欢迎你"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/activity_personalcenter_account_image"
        app:layout_constraintLeft_toRightOf="@id/activity_personalcenter_account_image"
        app:layout_constraintTop_toTopOf="@id/activity_personalcenter_account_image" />

    <View
        android:id="@+id/activity_personalcenter_line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="1dp"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/activity_personalcenter_account_image" />

    <TextView
        android:id="@+id/activity_personalcenter_warning_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="注意：修改密码要保证两次一致!"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_personalcenter_line1" />

    <View
        android:id="@+id/activity_personalcenter_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/activity_personalcenter_warning_textview" />


    <TextView
        android:id="@+id/activity_personalcenter_username_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingLeft="30dp"
        android:text="用户名"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/activity_personalcenter_password_editText1" />

    <ImageView
        android:id="@+id/activity_personalcenter_username_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/login_account"
        app:layout_constraintBottom_toBottomOf="@id/activity_personalcenter_username_editText"
        app:layout_constraintLeft_toLeftOf="@id/activity_personalcenter_username_editText"
        app:layout_constraintTop_toTopOf="@id/activity_personalcenter_username_editText" />

    <EditText
        android:id="@+id/activity_personalcenter_password_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="新密码"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/activity_personalcenter_password_editText2" />

    <ImageView
        android:id="@+id/activity_personalcenter_password_icon1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/login_password"
        app:layout_constraintBottom_toBottomOf="@id/activity_personalcenter_password_editText2"
        app:layout_constraintLeft_toLeftOf="@id/activity_personalcenter_password_editText2"
        app:layout_constraintTop_toTopOf="@id/activity_personalcenter_password_editText2" />

    <EditText
        android:id="@+id/activity_personalcenter_password_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_personalcenter_password_icon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/login_password"
        app:layout_constraintBottom_toBottomOf="@id/activity_personalcenter_password_editText1"
        app:layout_constraintLeft_toLeftOf="@id/activity_personalcenter_password_editText1"
        app:layout_constraintTop_toTopOf="@id/activity_personalcenter_password_editText1" />

    <Button
        android:id="@+id/activity_personalcenter_submit_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@id/activity_personalcenter_password_editText2"
        app:layout_constraintRight_toRightOf="@id/activity_personalcenter_password_editText2"
        app:layout_constraintTop_toBottomOf="@id/activity_personalcenter_password_editText2" />

    <TextView
        android:id="@+id/activity_personalcenter_myOrder_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="我的订单"
        app:layout_constraintBottom_toBottomOf="@id/activity_personalcenter_submit_button"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/activity_personalcenter_line3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="#E8E8E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_personalcenter_submit_button" />


</android.support.constraint.ConstraintLayout>