<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_detail_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/passenger"/>
    <TextView
        android:id="@+id/list_detail_um"
        android:text="没有伞的人"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toRightOf="@id/list_detail_icon"
        app:layout_constraintTop_toTopOf="@id/list_detail_icon"
        app:layout_constraintBottom_toBottomOf="@id/list_detail_icon"/>

    <TextView
        android:id="@+id/list_detail_haveum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="有伞的人"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toRightOf="@id/list_detail_um"
        app:layout_constraintTop_toTopOf="@id/list_detail_icon"
        app:layout_constraintBottom_toBottomOf="@id/list_detail_icon"/>

    <TextView
        android:id="@+id/list_detail_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单时间"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_detail_icon"
        app:layout_constraintBottom_toBottomOf="@id/list_detail_icon"/>

    <View
        android:id="@+id/list_detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/list_detail_icon" />


</android.support.constraint.ConstraintLayout>